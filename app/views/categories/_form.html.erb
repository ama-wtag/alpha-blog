<%= render "shared/errors" , obj: @category %>
<%= form_with(model: @category , class: "shadow p-3 mb-5 bg-success rounded" , local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name , "Category Name" , class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= f.text_field :name , class: "form-control shadow rounded" %>
    </div>
  </div>

  <div class="text-center mt-3">
    <%= f.submit "Add" , class: "btn btn-outline-light btn-lg" %>
  </div>
<% end %>