<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors" , obj: @user %>
      <%= form_with(model: @user , class: "shadow p-3 mb-5 bg-success rounded" , local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username , class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username , class: "form-control shadow rounded" , placeholder: "title of article" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :email , class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email , class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :password , class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password , class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="text-center mt-3">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account" , class: "btn btn-outline-light btn-lg") %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= link_to "[ Cancel and return To articles listing ]" , articles_path , class: "text-success" , method: :get %>
      </div>
    </div>
  </div>
</div>